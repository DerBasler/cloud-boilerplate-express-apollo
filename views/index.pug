extends layout
include ./mixins/article-thumbnail

block content
  .header.clearfix
    nav
      ul.nav.nav-pills.pull-right
        li.active(role='presentation')
          a(href='/') Home
        li(role='presentation')
          a(href='https://kenticocloud.com/', target='_blank') Kentico Cloud
        li(role='presentation')
          a(href='https://app.kenticocloud.com/sign-up', target='_blank') Sign up
    h3.text-muted Kentico Cloud Boilerplate
  .jumbotron
    h1 Let's Get Started
    p.lead
      | This boilerplate includes a set of features and best practices to kick off your website development with Kentico Cloud smoothly. Take a look into the code to see how it works.
    p
      a.btn.btn-lg.btn-success(href='https://github.com/Kentico/cloud-boilerplate-express-apollo', target='_blank', role='button') Read the Quick Start
  .row.marketing
    h2 Articles from the Dancing Goat Sample Site
  .row.marketing
    +article-thumbnail